{
  "manifest_version": 3,
  "name": "Hotkey Router",
  "version": "0.1.0",
  "description": "Standarize hotkeys for llm websites (chatgpt, grok, claude, perplexity, t3chat)",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "src/shared/constants.js",
        "src/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
